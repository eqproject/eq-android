<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorwhite">

    <ImageView
        android:id="@+id/title_background"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/barContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/eq_back_black" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="卡劵说明"
            android:textColor="@color/color_3D3A3A"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_3D3A3A"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barContainer"
        android:text="我是主标题内容"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8B8989"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:text="一个完整的软件研发和部署平台，包括应用设计、应用开发、应用测试和应用托管，都作为一种服务提供给客户，应用测试和应用托管。"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_3D3A3A"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        android:text="我是主标题内容"/>

    <TextView
        android:id="@+id/tv3_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8B8989"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        android:text="一个完整的软件研发和部署平台，包括应用设计、应用开发、应用测试和应用托管，都作为一种服务提供给客户，应用测试和应用托管。"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_3D3A3A"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3_content"
        android:text="我是主标题内容"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/productContainer"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        android:background="@mipmap/background_product_2"
        app:layout_constraintTop_toBottomOf="@id/tv4">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/productPictureImageView"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/product_picture" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/productNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:maxWidth="200dp"
            android:textColor="@color/colorwhite"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/productPictureImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nike Sportswear Heritage 券" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="13dp"
            android:textColor="@color/colorwhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="600" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/priceLabelTextView2"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="2dp"
            android:text="@string/RMB"
            android:textColor="@color/colorwhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/priceTextView"
            app:layout_constraintRight_toLeftOf="@id/priceTextView" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/priceLabel1TextView"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:text="面值"
            android:textColor="@color/colorwhite"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/priceLabelTextView2"
            app:layout_constraintRight_toLeftOf="@id/priceLabelTextView2" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/productLogImageView"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:src="@mipmap/product_log" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/productStoreNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="6dp"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/productLogImageView"
            app:layout_constraintLeft_toRightOf="@id/productLogImageView"
            tools:text="耐克官方旗舰店" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="6dp"
            android:gravity="center"
            android:text="提供承兑"
            android:textColor="@color/colorwhite"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@id/productStoreNameTextView"
            app:layout_constraintLeft_toRightOf="@id/productStoreNameTextView" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@id/productStoreNameTextView"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="有效期：2019.03.23-2049.12.31" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv4_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8B8989"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@+id/productContainer"
        android:text="一个完整的软件研发和部署平台，包括应用设计、应用开发、应用测试和应用托管，都作为一种服务提供给客户，应用测试和应用托管。"/>



</android.support.constraint.ConstraintLayout>